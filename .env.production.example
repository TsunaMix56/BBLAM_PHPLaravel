# BBLAM PHP Laravel - Security Configuration

APP_NAME="BBLAM JWT API"
APP_ENV=production
APP_KEY=base64:CHANGE_THIS_IN_PRODUCTION_GENERATE_WITH_php_artisan_key_generate
APP_DEBUG=false
APP_URL=https://your-production-domain.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Database - Production MySQL
DB_CONNECTION=mysql
DB_HOST=your-production-mysql.com
DB_PORT=3306
DB_DATABASE=bblamtestdb
DB_USERNAME=root
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# JWT Configuration
JWT_SECRET=CHANGE_THIS_GENERATE_RANDOM_256BIT_KEY
JWT_TTL=60
JWT_REFRESH_TTL=20160

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Cache
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis
REDIS_HOST=your-redis-host
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_PORT=6379

# Security
BCRYPT_ROUNDS=12
ARGON_MEMORY=1024
ARGON_THREADS=2
ARGON_TIME=2

# CORS
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_EXPOSED_HEADERS=
CORS_MAX_AGE=86400
CORS_SUPPORTS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_LOGIN_PER_MINUTE=5
RATE_LIMIT_API_PER_MINUTE=100

# Mail (for notifications)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@bblam-api.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (if using S3/SES)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=

# Monitoring & Logging
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Feature Flags
ENABLE_REGISTRATION=false
ENABLE_PASSWORD_RESET=true
MAINTENANCE_MODE=false
